<script type="application/ld+json">
  {
      "@context": "https://schema.org",
      "@type": "Course",
      "name": "<%= @course.name %>",
      "description": "<%= sanitize(@course.description, tags: %w(), attributes: %w()) %>",
      "provider": {
        "@type": "Organization",
        "name": "<%= @course.creator_name %>",
        "sameAs": "<%= @course.creator_url %>"
      }
    }
</script>
