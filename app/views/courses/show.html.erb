<div class="container-fluid" id="course">
  <div class="col-md-9 course-container">
    <h2> <%= @course.name %> </h2>
    <div class="description">
      <h3> About this course </h3>
      <%= hyperlink @course.description %>
      <p>(<%= @course.lessons.count %> lessons)</p>
      <%= link_to course_lesson_path @course, @course.lessons.first do %>
        <%=  user_signed_in? && @course.enrolled?(current_user) ? 'Resume' : 'Enroll' %>
      <% end %>
    </div>
  </div>

  <%= render 'shared/sidebar/lessons', course: @course,
                                       current_lesson: @lesson,
                                       has_title: false,
                                       has_progress: false,
                                       size: 'col-md-3' %>

