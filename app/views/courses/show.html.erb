<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %> (<%= @course.lessons.count %> lessons)
</p>

<ul>
  <% @course.lessons.each do |lesson| %>
    <li><%= link_to lesson.name, course_lesson_path(@course, lesson) %></li>
  <% end %>
</ul>

<%= form_tag import_from_youtube_course_path(@course), method: :post do |f| %>
  <h3>Import youtube playlist</h3>
  <%= text_field_tag :url %>
  <%= submit_tag :import %>
<% end %>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>