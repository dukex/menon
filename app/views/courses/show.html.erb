
<h1 class="font-bold text-4xl text-blue-900"><%= @course.name %></h1>

<p class="my-5 text-blue-900">
<%= sanitize @course.description, tags: %w(ul ol li br), attributes: %w(class) %>
</p>

<div class="flex">
  <div><span class="text-blue-900 block text-3xl px-4"><%= @course.lessons.count%></span><span class="text-blue-900 text-3xl block px-4">v√≠deos</span></div>
  <div><span class="text-blue-900 text-3xl block px-4"><%= @course.lessons.map { |lesson| lesson.duration }.sum / 3600 %></span><span class="text-blue-900 text-3xl block px-4">hours</span></div>

  <img src="<%= @course.thumbnail_url %>" class="w-21 h-21">
</div>

<div class="shadow-gray bg-white rounded-3xl ml-3 mr-3">
  <h2 class="font-bold text-2xl text-blue-900 mr-6 my-4">Lessons</h2>

  <ol>

    <% @course.lessons.each do |lesson| %>
      <li class="flex p-2">
        <img class="flex-none w-14 h-14" src="<%= lesson.thumbnail_url %>">
        <span class="flex-1"><%= lesson.name %></span>
      </li>
    <% end %>

  </ol>
</div>

<div class="sticky bottom-0 bg-blue-900 h-20 flex items-center justify-center"><button class="w-40 h-11 font-bold text-base rounded-lg bg-green-200">Enroll now for free</button></div>


