<h1 class="font-bold text-5xl"><%= t ".title" %></h1>
<h2 class="text-lg mt-3 mb-8"><%= t ".subtitle.html" %></h2>

<% if @courses.featured? %>
  <section>
    <h3 class="font-bold text-3xl">Featured Courses</h3>
    <%= render 'components/course_list', courses: featured %>
  </section>
<% end %>

<section>
  <h3 class="font-bold text-3xl">Latest Courses</h3>
  <%= render 'components/course_list', courses: @courses.latest %>
  <%= link_to t(".more_courses", category: "recently updated"), root_url, class: "text-right block underline" %>
</section>

<% if @courses.top_categories.present? %>
  <section>
    <h3 class="font-bold text-3xl mt-6">Top Categories</h3>

    <% @courses.top_categories.each do |category, courses| %>
      <h4 class="font-bold text-lg mt-5 mb-8"><%= category %></h4>
      <%= render 'components/course_list', courses: courses %>
      <%= link_to t(".more_courses", category: "tech"), root_url, class: "text-right block underline" %>
    <% end %>
  </section>
<% end %>

<script type="application/ld+json">
  {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Courses",
        "item": "<%= courses_url %>"
      }]
    }
</script>
