<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <% @pages.each do |data| %>
    <% (0..data[:count]).to_a.each do |page| %>
      <sitemap>
        <loc>https://menon.courses/sitemap/<%= data[:type] %>/<%= page %>.xml</loc>
      </sitemap>
    <% end %>
  <% end %>
</sitemapindex>
