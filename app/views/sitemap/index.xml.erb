<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>https://menon.courses</loc>
    <lastmod><%= @courses[0].updated_at.strftime("%Y-%m-%d") %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  <% @courses.each do |course| %>
    <url>
      <loc>https://menon.courses/<%= course.slug %></loc>
      <lastmod><%= course.updated_at.strftime("%Y-%m-%d") %></lastmod>
      <priority>0.75</priority>
    </url>
    
    <% course.lessons.each do |lesson| %>
      <url>
        <loc>https://menon.courses/<%= course.slug %>/lessons/<%= lesson.slug %></loc>
        <lastmod><%= lesson.updated_at.strftime("%Y-%m-%d") %></lastmod>
        <priority>1</priority>
      </url>
    <% end %>

  <% end %>
</urlset>
